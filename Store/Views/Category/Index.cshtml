@model IEnumerable<Category>


<div class="container p-3" >
    <div class="row pt-4">
        <div class="col-6 ">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">Create new category</a>
        </div>
    </div>

    @if (Model.Count() > 0) { 
        
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Category name</th>
                    <th>Display Order</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="30%">@item.DisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary">Edit</a>
                            <a asp-controller="Category" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>      }
            else
            {
                <p>Category does not exist</p>
            }

</div>

