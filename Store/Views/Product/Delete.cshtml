
@model Store.Models.Product
@{
    var title = "Delete Product";
}
<form method="post" asp-action="DeletePost" enctype="multipart/form-data">
        <input asp-for="Id" hidden />

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@title</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                    </div>
                </div>



                <div class="form-group row">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="file" id="uploadBox" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Type.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            @if (Model.Id != 0)
                            {
                                //update
                                <input type="submit" class="btn btn-danger w-100" value="DELETE" />
                            }


                        </div>


                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">BACK</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 pt-4">
                @if (Model.Id != 0)
                 {
                    <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius:5px; border:1px solid #000000;" />
                 }
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        

        $(document).ready(function () {
            $('.summernote').summernote();
            height: 400,
            disabled: true
        });
    </script>
}



