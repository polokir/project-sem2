@model IEnumerable<Store.Models.Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary">Create new category</a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Product name</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Application Type</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="30%">@item.Name</td>
                    <td width="10%">@item.Price</td>
                    <td width="20%">@item.Category.Name</td>
                    <td width="20%">@item.Type.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@item.Id" asp-action="Upsert" class="btn btn-primary">Edit</a>
                            <a asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table> }
    else
    {
        <p>Product does not exist</p>
    }

</div>

