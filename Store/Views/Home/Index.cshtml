@model Store.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var item in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@item.Name.Replace(' ','_')">
                @item.Name
            </button>
        }
    </div>
    <br />
    <div class="row">
        @foreach(var item in Model.Products)
            {
                <partial name="_ProductCard" model="item" />
            }
    </div>
</div>
